{
  "manifest_version": 3,
  "name": "Manus Browser Assistant",
  "version": "2.0.0",
  "description": "AI-powered browser automation assistant with screenshot capture and web interaction",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "debugger"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://www.dickssportinggoods.com/*",
    "https://api.anthropic.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:3000/*"],
      "js": ["bridge.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://www.dickssportinggoods.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
